generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model pack_stickers {
  identifier              Int      @id @default(autoincrement())
  cid                     Int
  name                    String   @db.Text
  animated_sticker_pack   Boolean? @default(false)
  android_play_store_link String   @db.Text @default("")
  stickers                String   @db.Text @default("")
  count_set_to_whatsapp   Int?     @default(0)
  count_views             Int?     @default(10)
  folder                  String   @db.Text @default("")
  tbl_cat                 tbl_cat  @relation(fields: [cid], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "pack_stickers_ibfk_1")

  @@index([cid], map: "cid")
}

model tbl_admin {
  id           Int     @id @default(autoincrement())
  username     String  @db.VarChar(15)
  password     String  @db.Text
  email        String? @db.VarChar(100)
  full_name    String? @db.VarChar(255)
  package      String? @db.VarChar(255)
  dynamic_link String? @default("firebase dynamic link") @db.Text
}

model tbl_cat {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(255)
  image         String          @db.VarChar(255)
  color         String?         @default("#ff8c00") @db.VarChar(255)
  language_app  Int?
  tbl_language  tbl_language?   @relation(fields: [language_app], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "tbl_cat_ibfk_1")
  pack_stickers pack_stickers[]

  @@index([language_app], map: "language_app")
}

model tbl_language {
  id            Int       @id @default(autoincrement())
  name          String    @db.VarChar(255)
  label         String    @db.VarChar(255)
  language_code String    @db.VarChar(255)
  filename      String    @db.VarChar(255)
  dispo         Boolean   @default(false)
  tbl_cat       tbl_cat[]
}
